// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ratings      Rating[]
  favorites    Favorite[]
  watchHistory WatchHistory[]

  @@map("users")
}

model Rating {
  id        String   @id @default(uuid())
  userId    String
  movieId   Int
  movieType String   // "movie" or "tv"
  rating    Float    // 1-10
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId, movieType])
  @@map("ratings")
}

model Favorite {
  id         String   @id @default(uuid())
  userId     String
  movieId    Int
  movieType  String   // "movie" or "tv"
  movieTitle String?
  posterPath String?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId, movieType])
  @@map("favorites")
}

model WatchHistory {
  id         String   @id @default(uuid())
  userId     String
  movieId    Int
  movieType  String   // "movie" or "tv"
  movieTitle String?
  genres     String   // Comma-separated genre names
  watchedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("watch_history")
}
